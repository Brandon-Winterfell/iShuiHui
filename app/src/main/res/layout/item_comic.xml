<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.lufficc.ishuhui.widget.TagImageView
                android:id="@+id/iv_tag"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                app:simple_corner_distance="5dp"
                app:simple_tag_background_color="@color/material_orange"
                app:simple_tag_enable="true"
                app:simple_tag_orientation="left_top"
                app:simple_tag_text="æ–°"
                app:simple_tag_textColor="@color/white"
                app:simple_tag_textSize="10sp"
                app:simple_tag_width="20dip" />

            <TextView
                android:id="@+id/title_LastChapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/blue_bg"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:padding="4dp"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:tag="Hover"
            android:textColor="@color/textColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:paddingBottom="4dp"
            android:paddingEnd="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="2dp"
            android:paddingStart="5dp"
            android:paddingTop="2dp"
            android:textColor="@color/textColorSecondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="4dp"
            android:textColor="@color/material_orange_dark_t"
            android:textSize="14sp" />
    </LinearLayout>

</android.support.v7.widget.CardView>
